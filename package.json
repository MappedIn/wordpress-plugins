{
	"name": "template",
	"version": "0.0.0",
	"main": "index.js",
	"repository": "git@github.com:MappedIn/template.git",
	"author": "",
	"license": "UNLICENSED",
	"lint-staged": {
		"**/*.{js,ts,json}": [
			"prettier --write"
		]
	},
	"scripts": {
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' +",
		"postinstall": "yarn --cwd .commitlint && yarn server",
		"prepare": "husky install",
		"preversion": "yarn lint && yarn test",
		"server": "yarn --cwd server",
		"release": "standard-version --no-verify",
		"start": "yarn server start",
		"build": "yarn server build",
		"dev": "npx nodemon -x ts-node ./server/src/index.ts -w ./server/src -i *.test.ts",
		"test": "jest .",
		"test:ci:jest": "cross-env NODE_ENV=test jest --json --outputFile=.jest-test-results.json --coverage --runInBand --no-cache",
		"test:ci:full": "yarn cover",
		"lint": "eslint .",
		"docker:build": "docker build --build-arg APP_VERSION=$(./get-version.sh) -t template .",
		"docker:run": "docker run -it --rm --env PORT=8000 --env-file ./.env -p 8000:8000 template",
		"docker": "yarn docker:build && yarn docker:run",
		"prettier:check": "prettier --check '**/*.{js,ts,json}'",
		"prettier:write": "prettier --write '**/*.{js,ts,json}'",
		"cover": "mkdir .nyc_temp || true && yarn cover:jest && yarn cover:merge && yarn cover:report && yarn cover:cleanup",
		"cover:jest": "nyc --silent yarn test:ci:jest && cp ./coverage/jest/coverage-final.json ./.nyc_temp/coverage-jest.json",
		"cover:merge": "nyc merge .nyc_temp ./.nyc_final/coverage.json",
		"cover:report": "nyc report --reporter=json-summary --report-dir coverage/combined --temp-dir ./.nyc_final",
		"cover:cleanup": "rm -r ./.nyc_final ./.nyc_temp ./.nyc_output"
	},
	"volta": {
		"node": "18.16.0",
		"yarn": "1.22.11"
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"husky": "^8.0.3",
		"jest": "^29.6.1",
		"lint-staged": "^13.2.3",
		"nyc": "^15.1.0",
		"prettier": "^3.0.0",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
}
